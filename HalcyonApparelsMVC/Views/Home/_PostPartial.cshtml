@model HalcyonApparelsMVC.Models.AccessoryDetailsMVC


@{
    ViewData["Title"] = "Post";
}


<link rel="stylesheet" href="~/css/popup.css" />
<div class="wrap">
    <h3>Add Accessory</h3>
    <div class="myModal ">
        <form asp-action="Post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="AccessoryName" class="control-label"></label>
                <input asp-for="AccessoryName" class="form-control" size="4" />
                <span asp-validation-for="AccessoryName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccessoryType" class="control-label"></label>
                <input asp-for="AccessoryType" class="form-control" size="4" />
                <span asp-validation-for="AccessoryType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AccessoryBrand" class="control-label"></label>
                <input asp-for="AccessoryBrand" class="form-control" size="4" />
                <span asp-validation-for="AccessoryBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccessoryPrice" class="control-label"></label>
                <input asp-for="AccessoryPrice" class="form-control" size="4" />
                <span asp-validation-for="AccessoryPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccessoryDiscount" class="control-label"></label>
                <input asp-for="AccessoryDiscount" class="form-control" size="4" />
                <span asp-validation-for="AccessoryDiscount" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <div class="custom-file">
                    <input asp-for="ImageFile" class="custom-file-input" id="FLFrontImage" onchange="document.getElementById('FrontImagePrv').src=window.URL.createObjectURL(this.files[0])" />
                    
                </div>
                
            </div>
   
            <img id="FrontImagePrv" src="" onerror="this.src='https://thumbs.dreamstime.com/b/camera-icon-trendy-flat-style-isolated-grey-background-symbol-your-web-site-design-logo-app-ui-vector-illustration-eps-136543061.jpg';" alt="" width="150" height="150" style="border:1px; margin-top:20px; margin-left:120px;" />
          
            <div class="modal-footer">
                <input type="submit" value="Add" class="btn btn-primary" data-inline="true" />
                <button type="button" value="close" class="btn btn-primary closbtn" data-inline="true" data-dismiss="modal" style="margin-left:15px;">Cancel</button>
            </div>
        </form>
    </div>
</div>

<script src="~/js/site.js" asp - append - version="true"></script>
<script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<script src="~/lib/jquery.unobtrusive-ajax.min.js"></script>

<script type="text/javascript">
    $(function () {
        $(".closbtn").click(function () {
            $("#myModal").modal("hide");
        });
    });
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });

</script>

